

    @using (Html.BeginForm("LoadApplication", "Dashboard", FormMethod.Post))
    {
        foreach (var id in AESHiringManagement.Models.Dashboard.getIds())
        {
            string name = AESHiringManagement.Models.Dashboard.getName(id);
            string color;
            switch (AESHiringManagement.Models.Dashboard.getStatus(id))
            {
                case 0:
                    color = "green";
                    break;
                case 1:
                    color = "blue";
                    break;
                case 2:
                    color = "red";
                    break;
                default:
                    color = "";
                    break;
            }
            <input type="submit" class="dashboard-button" style="color:@color" name="selectApp" value="@name" />
            <br />
        }
    }






