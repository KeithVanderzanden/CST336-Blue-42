@model List<AESApplications.Models.EducationModel>

@{
    ViewBag.Title = "Education";
}

<div class="content">

    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm("Index", "Education", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => m[i].applicantId, Model[i].applicantId);
            @Html.HiddenFor(m => m[i].educationId, Model[i].educationId);

            <fieldset>
                <legend class="label-blue text-shadow">School @(i + 1)</legend>

                <div style="display: table;">

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].name)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].name, new { style = "width: 200px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].name)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].street)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].street, new { style = "width: 300px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].street)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].city)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].city, new { style = "width: 200px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].city)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].state)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].state, new { style = "width: 30px; float: left; text-transform: uppercase", maxlength = 2 })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].state)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].zip)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].zip, new { style = "width: 100px; float: left;", maxlength = 5 })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].zip)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].yearFrom)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].yearFrom, new { style = "width: 80px; float: left;", maxlength = 4 })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].yearFrom)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].yearTo)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].yearTo, new { style = "width: 80px; float: left;", maxlength = 4 })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].yearTo)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].graduated)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].graduated, new { style = "width: 20px; float: left; text-transform: lowercase", maxlength = 1 })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].graduated)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].degree)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].degree, new { style = "width: 200px; float: left; text-transform: capitalize" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].degree)</div>
                        </div>
                    </div>

                </div>

            </fieldset>

            <br />
        }

        <input type="submit" value="Continue" class="label-green text-shadow" />
    }

</div>