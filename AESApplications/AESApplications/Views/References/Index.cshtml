@model List<AESApplications.Models.ReferenceModel>

@{
    ViewBag.Title = "References";
}

<div class="content">

    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm("Index", "References", FormMethod.Post))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => m[i].applicantId, Model[i].applicantId);
            @Html.HiddenFor(m => m[i].referenceId, Model[i].referenceId);
        
            <fieldset>
                <legend class="label-blue text-shadow">Reference @(i + 1)</legend>

                <div style="display: table;">

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].name)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].name, new { style = "width: 200px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].name)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].phone)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].phone, new { style = "width: 100px; float: left;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].phone)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].company)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].company, new { style = "width: 200px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].company)</div>
                        </div>
                    </div>

                    <div style="display: table-row;">
                        <div class="question">@Html.LabelFor(m => m[i].title)</div>
                        <div class="answer">
                            @Html.TextBoxFor(m => m[i].title, new { style = "width: 200px; float: left; text-transform: capitalize;" })
                            <div class="validation">@Html.ValidationMessageFor(m => m[i].title)</div>
                        </div>
                    </div>

                </div>

            </fieldset>

            <br />
        }

        <input type="submit" value="Continue" class="label-green text-shadow" />
    }

</div>